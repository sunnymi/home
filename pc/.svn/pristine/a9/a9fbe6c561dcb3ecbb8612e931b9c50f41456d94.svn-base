// JavaScript Document

/*店铺分类*/
$(".sort_icon").click(function(){
		$(this).parent("dt").next().slideToggle();
		$(this).toggleClass("sort_icon_one");
		$(this).next(".sort_title").toggleClass("sort_title_color");		
	});


	
/*店铺大分类下小分类*/
$(".sortbox dd a").bind('click', function(){
	$('.sort_cont').removeClass('sort_cont_color');
	$(this).addClass('sort_cont_color');
}); 

