@charset "utf-8";
/* CSS Document */
/*灰色*/

/*店招背景颜色*/
.dz-color{
	background-color: #f9f8f8;
}

/*导航栏背景颜色*/
.nav-color{
	background-color: #7d7d7d;
}

/*鼠标悬浮导航栏背景颜色*/
.nav-item-name:hover ,.nav-item-color {
	background-color: #474646;
}

/*商品推荐标题*/
.shows-hd-color {
	color: #000;
}

/*店铺简介、店铺公告、搜索框、店铺分类颜色*/
.border_color {
	border-top-color:  #7d7d7d;
}




/*店铺分类+图标*/
.sort_icon{
	background: url(../../images/pcdecorate/shop_menu_1.png) left no-repeat;
}

/*店铺分类-图标*/
.sort_icon_one  {
	background: url(../../images/pcdecorate/shop_menu.png) left no-repeat;
}




/*店铺大的分类*/
.sort_title_color{
	color: #be0e2b;
}
/*店铺大分类下小分类*/
.sort_cont_color {
	background-color: #f9f8f8;
	color: #be0e2b;
	border: none;
}


/*店铺搜索990搜索字体*/
.price_sure_bg {
	background-color: #7d7d7d;
}
.price_sure_bg:hover {
	background-color: #000;
}

/*店铺搜索990确定和200搜索和确定字体*/
.search_shop a:hover , .search_price_2 a:hover{
	background-color: #7d7d7d;
	color: #fff;
}

/*按排序显示商品字体颜色*/
.filter-btn:hover {
	color: #cc0000;
}

/*排序颜色*/
.filter-btn_type {
	background-color: #7d7d7d;
}


/*二维码背景颜色*/
.QRbox_color {
	background-color: #f9f8f8;
	border-top-color: #e9e6e6;
	}
	
/*二维码底部返回顶部背景颜色*/
.QRbox_bottom_bgcolor {
	color: #5e5e5e;
	background-color: #e9e6e6;
}

.QRbox_bottom_bgcolor:hover {
	color: #5e5e5e;
	background-color: #dcdbdb;
}